<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <!-- 메뉴 시작 공간 -->

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 왼쪽 오른쪽 비율 분배 -->

        <LinearLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="88"
            android:background="@drawable/sub_menu_bg_2" >

            <!--  -->

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/LinearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <!-- 버튼 시작 -->

                    <LinearLayout
                        android:id="@+id/LinearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <!-- Back 버튼 -->

                        <LinearLayout
                            android:id="@+id/LinearLayout5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <Button
                                android:id="@+id/back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="top"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/back_button"
                                android:onClick="mOnClick" >
                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="BACK"
                                android:textColor="#FFFFFFFF"
                                android:textSize="20sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/LinearLayout8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <Button
                                android:id="@+id/home"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/home_button"
                                android:onClick="mOnClick" >
                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="HOME"
                                android:textColor="#FFFFFFFF"
                                android:textSize="20sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <Button
                                android:id="@+id/menu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/menu_button"
                                android:onClick="mOnClick" >
                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="MENU"
                                android:textColor="#FFFFFFFF"
                                android:textSize="20sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/LinearLayout11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <Button
                                android:id="@+id/function"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/function_button"
                                android:onClick="mOnClick" >
                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:id="@+id/filename"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="FUNCTION"
                                android:textColor="#FFFFFFFF"
                                android:textSize="20sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/LinearLayout14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <Button
                                android:id="@+id/setting"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/setting_button"
                                android:onClick="mOnClick" >
                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout15"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="SETTING"
                                android:textColor="#FFFFFFFF"
                                android:textSize="20sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 버튼 끝 -->
                </LinearLayout>
                <!-- 왼쪽 버튼 틀 -->
            </LinearLayout>

            <!-- 메뉴 리니어 끝 -->
        </LinearLayout>

        <FrameLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@drawable/sub_bg1" >

            <LinearLayout
                android:id="@+id/Right_Container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:background="@drawable/sub_bg1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/songImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="right" >

                        <FrameLayout
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_gravity="bottom" >

                            <ImageView
                                android:id="@+id/Image_View"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <!-- 오른쪽 최상위 부모 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8" >

                            <!-- 오른쪽최상단 -->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4" >
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Artist"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/Artist_View"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Artist2"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Album"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/Album_View"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Album2"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Year"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/Year_View"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Year2"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="File Size"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/Filesize_View"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="File Size2"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Position"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/Position_View"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Position2"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <!-- 뒤로, 재생/정지, 앞으로 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <RelativeLayout
                            android:id="@+id/RelativeLayout5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top" >

                            <Button
                                android:id="@+id/play"
                                android:layout_width="80dip"
                                android:layout_height="80dip"
                                android:layout_centerInParent="true"
                                android:background="@drawable/play_button"
                                android:onClick="mOnClick" >
                            </Button>

                            <Button
                                android:id="@+id/rw"
                                android:layout_width="70dip"
                                android:layout_height="70dip"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="20dip"
                                android:layout_toLeftOf="@id/play"
                                android:background="@drawable/rw_button"
                                android:onClick="mOnClick" >
                            </Button>

                            <Button
                                android:id="@+id/ff"
                                android:layout_width="70dip"
                                android:layout_height="70dip"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dip"
                                android:layout_toRightOf="@id/play"
                                android:background="@drawable/ff_button"
                                android:onClick="mOnClick" >
                            </Button>

                            <Button
                                android:id="@+id/list"
                                android:layout_width="70dip"
                                android:layout_height="70dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="30dip"
                                android:background="@drawable/list_button"
                                android:onClick="mOnClick" >
                            </Button>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" >

                        <LinearLayout
                            android:id="@+id/RelativeLayout7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3" >

                                <TextView
                                    android:id="@+id/StartView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2sp"
                                    android:gravity="center"
                                    android:padding="2sp"
                                    android:text="start"
                                    android:textColor="#00bfff"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <SeekBar
                                    android:id="@+id/progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical" >
                                </SeekBar>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3" >

                                <TextView
                                    android:id="@+id/EndView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2sp"
                                    android:gravity="start"
                                    android:padding="2sp"
                                    android:text="end"
                                    android:textColor="#00bfff"
                                    android:textSize="25sp" >
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/List"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/PhoneAideoList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="awefwef"
                    android:textColor="#FFFFFF" >
                </ListView>
            </LinearLayout>
        </FrameLayout>
        <!--  -->
    </LinearLayout>

</FrameLayout> <!-- 2. 메뉴 시작 공간 끝 -->
