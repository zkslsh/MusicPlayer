<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ListView_LinearLayout"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    	<LinearLayout
    	    android:id="@+id/List_LinearLayout"
    	    android:background="@drawable/thumbnail_frame"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content">
    	        <ImageView
	       			android:id="@+id/imgIcon"
        			android:layout_width="154dip"
        			android:layout_height="97dip"
        			android:layout_marginLeft="7dp"
        			android:layout_marginTop="7dp"
				/>
    	</LinearLayout>
    	

		<TextView
			android:id="@+id/txtTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ffffffff"
			android:textSize="30sp"
			android:textStyle="normal"
			android:layout_toRightOf="@id/List_LinearLayout"
			android:paddingLeft="20dp"
			android:layout_marginTop="28dp"/>
		<TextView
		    android:id="@+id/runningTime"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true" 
		    android:textColor="#ffffffff"
		    android:textSize="20sp"
		    android:textStyle="normal"
		    android:layout_marginRight="20dp"
		    android:paddingLeft="20dp"
		    android:paddingTop="35dp"/>		
		<TextView
			android:id="@+id/txtSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textColor="#ffffffff"
			android:textSize="20sp"
			android:textStyle="normal" 
			android:layout_toLeftOf="@id/runningTime"
			android:paddingTop="35dp"/>		
	</RelativeLayout>
</LinearLayout>

